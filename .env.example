# Example Environment Configuration
# Copy this file to .env.production and update the values

NODE_ENV=production
PORT=9000

# Database Configuration
MONGODB_URI=mongodb://mongodb:27017/secure-auth-full-stack
MONGODB_MAX_POOL_SIZE=10
MONGODB_SERVER_SELECTION_TIMEOUT=5000
MONGODB_SOCKET_TIMEOUT=45000

# MongoDB Root Credentials
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=change_this_password

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change_this_password

# JWT Configuration
JWT_SECRET=change_this_jwt_secret_key
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=change_this_jwt_refresh_secret_key
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration
EMAIL_FROM=noreply@yourdomain.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=change_this_session_secret

# Application Configuration
CLIENT_URL=http://localhost:3000
API_BASE_URL=http://localhost
HEALTH_CHECK_ENDPOINT=/health
SHUTDOWN_TIMEOUT=10000

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=change_this_password

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=20m
LOG_FILE_MAX_FILES=14d